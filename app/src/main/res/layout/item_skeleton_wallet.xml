<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/asset_item_radius"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/image_asset_icon"
            android:layout_width="@dimen/asset_icon_size"
            android:layout_height="@dimen/asset_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/asset_gray_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image_asset_icon">


            <View
                android:id="@+id/view_title_skeleton"
                android:layout_width="64dp"
                android:layout_height="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/skeleton_basic_100_round_7"
                app:layout_constraintEnd_toEndOf="parent" />


            <View
                android:id="@+id/view_amount_skeleton"
                android:layout_width="144dp"
                android:layout_height="12dp"
                android:layout_below="@+id/view_title_skeleton"
                android:layout_marginTop="10dp"
                android:background="@drawable/skeleton_basic_100_round_10" />

            <View
                android:id="@+id/view_tag_skeleton"
                android:layout_width="44dp"
                android:layout_height="12dp"
                android:layout_below="@+id/view_title_skeleton"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/view_amount_skeleton"
                android:background="@drawable/skeleton_basic_100_round_10" />


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>