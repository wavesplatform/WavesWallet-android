<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basic50"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="14dp"
        android:paddingEnd="24dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_script_address_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_details_script_invocation_script_address"
            android:textColor="@color/basic500" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_script_address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_script_address_hint"
            android:layout_marginTop="4dp"
            tools:text="Mr. Big Mike"
            android:textColor="@color/disabled900"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="6dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_copy_18_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="4dp"
        android:paddingEnd="24dp"
        android:paddingBottom="14dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_payment_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_details_script_invocation_payment"
            android:textColor="@color/basic500" />

        <LinearLayout
            android:id="@+id/linear_payment"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_payment_hint"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_payment_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/disabled900"
                tools:text="1.99800118" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_payment_tag"
                style="@style/TickerTag"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                tools:text="WAVES"
                tools:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>


