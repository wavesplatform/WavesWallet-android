<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@color/accent50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basic50"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/container_copy_tx_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="16dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_copy_black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/history_details_copy_tx_id"
                android:textColor="@color/black" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_copy_all_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="16dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_copy_black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/history_details_copy_all_data"
                android:textColor="@color/black" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>