<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/linear_drawer"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingTop="24dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/ic_logo" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/left_drawer_description"
        android:textColor="@color/basic500"
        android:textSize="14sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:layout_marginTop="14dp"
        android:text="@string/left_drawer_site"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:text="@string/left_drawer_whitepaper"
        android:id="@+id/text_whitepaper"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="48dp"
        android:background="@color/accent50" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/left_drawer_terms_and_conditions"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:id="@+id/text_terms"
        android:paddingBottom="13dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:paddingTop="13dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="48dp"
        android:background="@color/accent50" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/left_drawer_support"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:id="@+id/text_support"
        android:paddingBottom="13dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        android:paddingTop="13dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="48dp"
        android:background="@color/accent50" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/left_drawer_join_the_waves_community"
        android:textColor="@color/basic500"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_s_github_28" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_telegram"
            android:layout_width="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_s_telegram_28" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_discord"
            android:layout_width="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_s_discord_28" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_s_twitter_28" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_facebook"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_s_facebook_28" />

    </LinearLayout>

</LinearLayout>